{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "ordered-imports": true,
        "trailing-comma": [true],
        "no-unused-expression": true,
        "triple-equals": true,
        "prefer-const": true,
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ]
    }
}
